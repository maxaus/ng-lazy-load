body
  padding-top 20px
  padding-bottom 20px

.header,
.marketing,
.footer
  padding-left 15px
  padding-right 15px

.header
  border-bottom 1px solid #e5e5e5
  margin-bottom 30px
  h3
    margin-top 0
    margin-bottom 0
    line-height 40px
    padding-bottom 19px

.footer
  padding-top 19px
  color #777
  border-top 1px solid #e5e5e5

@media (min-width:768px)
  .container
    max-width 730px

@media screen and (min-width: 768px)
  .header,
  .marketing,
  .footer
    padding-left 0
    padding-right 0
  .loading-widget
    background-image: url("/images/preloader.gif")
    background-repeat: no-repeat
    background-position: center center
    background-size: auto 80%
    color: transparent !important
    height: 60px

.container-narrow
  & > hr
    margin 30px 0

.jumbotron
  text-align center
  border-bottom 1px solid #e5e5e5
  border-bottom 0
  background-color: #ffffff
  ul
    list-style: none
  .btn
    font-size 21px
    padding 14px 24px
  .avatar
    width: 60px
    height: 60px
  .news-list
    height: 400px
    li
      padding: 10px
    li:nth-of-type(2n)
      background-color: #cccccc
    li:nth-of-type(2n+1)
      background-color: #eeeeee
    .info-container
      float: right
      width: 100%
      margin-right: -100px
      text-align: left
      font-size: 11pt
    .thumbnail-container
      float: left
      width: 100px
      font-size: 8pt
      color #999999
      text-align: center
    .cleared
      clear: both

